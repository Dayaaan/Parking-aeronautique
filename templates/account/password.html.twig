{% extends 'base.html.twig' %}

{% block title %} Modification du mot de passe {% endblock %}

{% block body %} 
{{ navigation.display() }}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">&nbsp;
        </div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Modifier votre mot de passe !</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        <label for="password">{{ form_label(form.oldPassword) }}</label>
                        {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                        {{ form_errors(form.oldPassword, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">{{ form_label(form.newPassword) }}</label>
                        {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                        {{ form_errors(form.newPassword, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">{{ form_label(form.confirmPassword) }}</label>
                        {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                        {{ form_errors(form.confirmPassword, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="primary-btn text-uppercase">S'enregistrer !</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}