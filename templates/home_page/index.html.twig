<!-- start banner Area -->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>				
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-between">
            <div class="col-lg-6 col-md-6 banner-left">
                <h6 class="text-white">Nouveau parkings privé</h6>
                <h1 class="text-white">Parking de l'Aéronautique </h1>
                <p class="text-white">
                    Nous disposons de 3 parcs privés entièrement COUVERTs et sécurisés, proches de l’aéroport de nantes-atlantique.
                    N'attendez plus pour nous confier votre véhicule !
                </p>
            </div>
            <div class="col-lg-4 col-md-6 banner-right">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                    <a class="nav-link active" id="flight-tab" data-toggle="tab" href="#flight" role="tab" aria-controls="flight" aria-selected="true">Je réserve mon parking !</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="flight" role="tabpanel" aria-labelledby="flight-tab">
                    {{form_start(form)}}
                    <div class="form-wrap">
                        <div class="booking_parking">{{ form_label(form.parking) }} :</div>
                        <div class="formfield-select--container">
                            {{ form_widget(form.parking) }}
                        </div>
                        <div class="form-control">
                            {{ form_widget(form.startDate) }}
                            <div class="text-danger">
                                {{ form_errors(form.startDate) }}
                            </div>
                        </div>								
                        
                        <div class="form-control">
                            {{ form_widget(form.endDate) }}
                            <div class="text-danger">
                                {{ form_errors(form.endDate) }}
                            </div>
                        </div>	
                        <div class="form-control">
                            <div class="form-check">
                                {{ form_widget(form.advantages)}}
                            </div>
                        </div>	
                                                      			
                        <button type="submit" class="primary-btn text-uppercase">Je réserve !</button>
                    <div>								
                    {{form_end(form)}}
