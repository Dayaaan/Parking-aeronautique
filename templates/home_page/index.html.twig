<script src="bootstrap-datepicker.FR.js" charset="UTF-8"></script>
<script>
$(document).ready(function(){
    for (var i = 0; i < 6; i++) {
        var input = $(`#booking_advantages_${i}`);
        var label = $(`label[for=booking_advantages_${i}]`);
        var balise = $('<div class="form-check"></div>').prependTo(input.parent());
        input.appendTo(balise);
        label.appendTo(balise);
    }
    $.fn.datepicker.dates['fr'] = {
        days: ['D', 'L', 'M', 'M', 'J', 'V', 'S'],
        daysShort: ['Dim', 'Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam'],
        daysMin: ['Di', 'Lu', 'Ma', 'Me', 'Je', 'Ve', 'Sa'],
        months: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
        monthsShort: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        today: "Aujourd'hui",
        format: 'dd/mm/yyyy',
    };
    $('#booking_startDate, #booking_endDate').datepicker({
        format: 'dd/mm/yyyy',
        language: 'fr',
        //bloquer la réservation avant la date d'aujourdhui
        startDate: new Date(),
    });

});
</script>
